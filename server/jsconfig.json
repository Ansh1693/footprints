{
    "compilerOptions": {
      "checkJs": false,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": true,
      "target": "es2020",
      "module": "es2015"
    },
    "exclude": [
      "dist",
      "node_modules",
      "build",
      ".vscode",
      "coverage",
      ".npm",
      ".yarn"
    ],
    "typeAcquisition": {
      "enable": true,
      "include": [
        "node"
      ]
    }
  }