{
  "compilerOptions": {
     "checkJs": false,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
      "dist",
      "node_modules",
      "build",
      ".vscode",
      "coverage",
      ".npm",
      ".yarn"
    ],
    "typeAcquisition": {
      "enable": true,
      "include": [
        "node"
      ]
    }
}
